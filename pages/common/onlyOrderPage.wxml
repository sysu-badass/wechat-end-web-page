<template name="onlyOrderPage">
    <view class="food">
      <block wx:for="{{foodItems}}" wx:key="">
        <view class="">
            <image class="img" src="{{item.image}}"></image>
          <view class="zan-card__detail" catchtap="foodDetails" data-index="{{index}}">
            <view class="name">{{item.name}}</view>
            <view class="sales">{{item.description}}</view>
            <view class="price">ï¿¥  {{item.price}}</view>
          </view>
          <view class="food-numb">
            <view class="remove" 
            bindtap="removeFromTrolley"
            hidden="{{item.count==0}}" 
            data-index="{{index}}">-</view>
            <text class="text" 
            hidden="{{item.count==0}}">{{item.count}}</text>
            <view class="add" 
            bindtap="addToTrolley" data-index="{{index}}">+</view>
          </view>
        </view>
      </block>
    </view>
</template>